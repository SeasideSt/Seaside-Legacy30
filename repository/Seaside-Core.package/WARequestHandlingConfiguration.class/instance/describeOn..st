description
describeOn: config
	(config list: #notFoundHandlerClass)
		options: [self notFoundHandlerClasses];
		default: WANotFoundHandler.
	(config list: #redirectHandler)
		options: [self redirectHandlerClasses];
		default: WARedirectHandler.
	(config list: #serverProtocol)
		group: #server;
		comment: 'The protocol in URLs generated by Seaside.';
		options: [#(http https)];
		default: #http.
	(config string: #serverHostname)
		group: #server;
		comment: 'The hostname in URLs generated by Seaside.'.
	(config number: #serverPort)
		group: #server;
		comment: 'The port in URLs generated by Seaside. The default of HTTP is 80, the default of HTTPS is 443.';
		default: 80.
	(config string: #serverPath)
		group: #server;
		comment: 'The path in URLs generated by Seaside.'.